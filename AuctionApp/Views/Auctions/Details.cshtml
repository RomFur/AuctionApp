@model AuctionApp.Models.Auctions.AuctionDetailsVm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AuctionDetailsVm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentBid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentBid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
</div>

<p/>

<div>
    <h4>Bids</h4>
    <table class="table">
        <thead>
        <tr>
            <th>
                <b>Amount</b>
            </th>
            <th>
                <b>Bid by</b>
            </th>
            <th>
                <b>Bid date</b>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var bid in Model.BidVms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelBid => bid.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelBid => bid.BidderId)
                </td>
                <td>
                    @Html.DisplayFor(modelBid => bid.TimePlaced)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Place Bid", "CreateBid", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
